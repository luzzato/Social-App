<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- share title -->

    <TextView
        android:id="@+id/share_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/feed_status"
        android:textSize="12sp"
        android:visibility="gone" />
    <!-- share status -->

    <TextView
        android:id="@+id/share_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_item_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/feed_status"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/share_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_item_status"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_item_title_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/link_url"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/share_feedimg"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:contentDescription="@string/imageView"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/feed_item_mini.xml -->