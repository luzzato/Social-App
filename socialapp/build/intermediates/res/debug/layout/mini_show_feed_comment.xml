<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingTop="8dp" >

    <!-- show total like and comment -->

    <ImageView
        android:id="@+id/likes_feed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/imageView"
        android:paddingRight="8dp"
        android:src="@drawable/like_icon" />

    <TextView
        android:id="@+id/total_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="3dp"
        android:textColor="@color/feed_total_like"
        android:textSize="12sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/comments_feed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/imageView"
        android:paddingLeft="35dp"
        android:paddingRight="8dp"
        android:src="@drawable/commet_icon" />

    <TextView
        android:id="@+id/total_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="3dp"
        android:textColor="@color/feed_total_like"
        android:textSize="12sp"
        android:typeface="sans" />

</LinearLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/mini_show_feed_comment.xml -->