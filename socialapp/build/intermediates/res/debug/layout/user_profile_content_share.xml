<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_profile_share_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/share_button"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_weight="0.5"
        android:background="@color/blog_image_thumb"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/image_icon_status"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/status_black_icon" />

            <TextView
                android:id="@+id/statusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_icon_status"
                android:textColor="@color/share_button_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_share_status"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/profile_line_black_status" />
    <!-- profile_status_background -->

    <RelativeLayout
        android:id="@+id/photo_button"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_weight="0.5"
       android:background="@color/blog_image_thumb"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/image_icon_photo"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/photo_black_icon" />

            <TextView
                android:id="@+id/photoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_icon_photo"
                android:textColor="@color/share_button_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_checkin_status"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/profile_line_black_status" />

    <RelativeLayout
        android:id="@+id/checkin_button"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_weight="0.5"
        android:background="@color/blog_image_thumb"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/image_icon_checkin"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/checkin_black_icon" />

            <TextView
                android:id="@+id/checkinTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_icon_checkin"
                android:textColor="@color/share_button_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/user_profile_content_share.xml -->