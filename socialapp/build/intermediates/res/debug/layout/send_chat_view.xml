<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/status_privacy_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_post_privacy" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/write_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/post_privacy"
                android:hint="@string/write_message"
                android:paddingLeft="6dp"
                android:paddingRight="100dp"
                android:textColor="@color/link_url"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sticker"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="69dp"
                android:paddingRight="7dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/sticker" />

        </RelativeLayout>

        <Button
            android:id="@+id/send_email"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/comment_post_icon"
            android:text="@string/send"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/send_chat_view.xml -->