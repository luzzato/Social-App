<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/send_add_request"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:background="@drawable/add_friend_confirm_request"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/confirm_request"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:background="@drawable/add_friend_confirm_request"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/not_now"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/add_friend_not_now"
        android:textColor="@color/friend_not_now"
        android:textSize="12sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/send_a_message"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:background="@drawable/add_friend_send_a_message"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/view_profile"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/add_friend_view_profile"
        android:textColor="@color/friend_not_now"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>