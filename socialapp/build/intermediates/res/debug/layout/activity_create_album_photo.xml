<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/login_edittext1"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="11dp"
        android:typeface="normal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_description_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/login_edittext1"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="6"
        android:paddingLeft="11dp"
        android:scrollbars="vertical"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey1" >

        <RelativeLayout
            android:id="@+id/status_privacy_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="@drawable/border_post_privacy" >

            <TextView
                android:id="@+id/album_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/post_privacy"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:paddingTop="8dp"
                android:textColor="@color/share_status"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/post_stt_privacy_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/imageView"
                android:src="@drawable/post_stt_privacy" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey1" >

        <RelativeLayout
            android:id="@+id/status_privacy_all1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="@drawable/border_post_privacy" >

            <TextView
                android:id="@+id/comment_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/post_privacy"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:paddingTop="8dp"
                android:textColor="@color/share_status"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/imageView"
                android:src="@drawable/post_stt_privacy_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/imageView"
                android:src="@drawable/post_stt_privacy" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/photo_toolbar"
        android:textSize="12sp" />

</LinearLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/activity_create_album_photo.xml -->