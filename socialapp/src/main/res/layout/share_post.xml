<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_background" >

    <LinearLayout
        android:id="@+id/scrollview_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/radioYour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textColor="@color/share_status"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/share_status"
                    android:textStyle="bold" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/share_post_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/toView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/share_to" />

                <LinearLayout
                    android:id="@+id/send_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:orientation="vertical" >
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share_post_search"
                    android:paddingLeft="9dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp" >

                    <RelativeLayout
                        android:id="@+id/status_privacy_all"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/border_post_privacy" >

                        <EditText
                            android:id="@+id/searchEdit"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/post_privacy"
                            android:paddingLeft="6dp"
                            android:paddingRight="70dp"
                            android:textColor="@color/share_text"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/post_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/share_post_search"
                            android:contentDescription="@string/imageView"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </FrameLayout>

                <ListView
                    android:id="@+id/android:list"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="8dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/status_action_arena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/border_post_status"
            android:paddingBottom="20dp" >

            <EditText
                android:id="@+id/share_post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#00000000"
                android:maxLines="10"
                android:singleLine="false"
                android:textColor="@color/share_text" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>