<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_internet_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/no_internet_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageView"
        android:src="@drawable/no_internet_img" />

    <TextView
        android:id="@+id/no_internet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_internet_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/no_internet_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_internet_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey2"
        android:textSize="13sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/no_internet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_internet_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/F:/AndroidWork6/Mypinkpal_Android1/Mypinkpal_Android1/Mypinkpal_Android/Mypinkpal_Android/socialapp/src/main/res/layout/no_internet_connection.xml -->